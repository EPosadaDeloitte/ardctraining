    <process onError="error" processClass="com.ardctraining.core.model.CustomProductLabelCleanupEmailProcessModel"
             name="customLabelCleanupEmailProcess" start="generateCustomLabelCleanupEmail"
             xmlns="http://www.hybris.de/xsd/processdefinition">

        <action bean="generateCustomLabelCleanupEmail" id="generateCustomLabelCleanupEmail">

            <transition name="OK" to="sendEmail"/>

            <transition name="NOK" to="error"/>

        </action>


        <action bean="sendEmail" id="sendEmail">

            <transition name="OK" to="removeSentEmail"/>

            <transition name="NOK" to="failed"/>

        </action>


        <action bean="removeSentEmail" id="removeSentEmail">

            <transition name="OK" to="success"/>

            <transition name="NOK" to="error"/>

        </action>

        <end id="error" state="ERROR">Something went wrong.</end>

        <end id="failed" state="FAILED">Could not send customer registration email.</end>

        <end id="success" state="SUCCEEDED">Sent customer registration email.</end>

